generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exam {
  id              String   @id @default(uuid())
  exam_type       String
  mentorship      String
  exam_room_service Float   @default(0)
  sum             Float    @default(0)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
}

model Testimonial {
  id         String   @id @default(uuid())
  student    String   
  exam       String   
  score      String   
  content    String   
  image      String?  
  created_at DateTime @default(now())
}


model BlogPost {
  id         String   @id @default(uuid())
  title      String
  excerpt    String?
  date       DateTime @default(now())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Resource {
  id          String   @id @default(uuid())
  type        String   
  title       String
  description String?
  sourceType  String   
  sourceUrl   String   
  created_at  DateTime @default(now())
}
