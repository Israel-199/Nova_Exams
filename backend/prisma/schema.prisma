generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exam {
  id              String   @id @default(uuid())
  examType        String
  mentorship      String
  mentorshipValue Int      @default(0)   
  examRoomService Float
  sum             Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Testimonial {
  id          String   @id @default(uuid())
  student     String  
  exam        String  
  rating      Int      @default(5) 
  testimonial String   
  image       String?  
  imageId     String?  
  created_at  DateTime @default(now())
}

model BlogPost {
  id         String   @id @default(uuid())
  title      String
  excerpt    String?
  category   String?  
  author     String?  
  date       DateTime @default(now())
  readTime   String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Resource {
  id            String   @id @default(uuid())
  type          String
  title         String
  description   String?
  sourceType    String
  sourceUrl     String
  publicId      String?  
  pdfUploadMode String?
  videoType     String?
  created_at    DateTime @default(now())
}

model TeamMember {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  bio       String
  image     String?   
  imageId   String?  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

